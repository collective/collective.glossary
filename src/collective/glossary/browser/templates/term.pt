<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.glossary">
  <body>
    <metal:main fill-slot="main">

      <div tal:define="image nocall:context/image" tal:condition="nocall:image">
        <img tal:replace="structure context/@@images/image/preview" />
      </div>

      <div tal:replace="structure provider:plone.abovecontenttitle" />

      <h1 class="documentFirstHeading"
          tal:content="context/title">Title</h1>

      <div tal:replace="structure provider:plone.belowcontenttitle" />

      <tal:condition
        tal:define ="use_rich_text view/use_rich_text">
          <div class="documentDescription"
                   tal:condition="python: use_rich_text and getattr(context, 'text', None)"
                   tal:content="structure context/text/output">Rich description</div>
          <div class="documentDescription"
               tal:condition="not: use_rich_text"
               tal:content="context/description">Description</div>
      </tal:condition>
    </metal:main>
  </body>
</html>
