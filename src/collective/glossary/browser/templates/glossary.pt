<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.roster">
    <body>
        <metal:content-core fill-slot="content-core">
            <metal:content-core define-macro="content-core">
                <tal:repeat repeat="letter view/letters">
                    <div class="letter">
                        <div class="title" tal:content="letter"></div>
                        <div class="terms">
                            <tal:repeat repeat="item python:view.terms(letter)">
                                <div class="term">
                                    <div class="image"
                                         tal:condition="item/image">
                                        <img tal:attributes="src item/image/url;
                                                             width item/image/width;
                                                             height item/image/height;
                                                             alt item/title" />
                                    </div>
                                    <div class="description">
                                        <span class="title"
                                              tal:content="item/title">
                                        </span>
                                        -
                                        <span class="description"
                                              tal:replace="item/description">
                                        </span>
                                    </div>
                                </div>
                            </tal:repeat>
                        </div>
                    </div>
                </tal:repeat>
            </metal:content-core>
        </metal:content-core>
    </body>
</html>
