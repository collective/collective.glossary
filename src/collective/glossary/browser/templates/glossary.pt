<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.glossary">
  <body>
    <metal:content-core fill-slot="content-core"
        tal:define="text context/text/output | nothing">
      <metal:content-core define-macro="content-core">
        <p tal:define="is_editable context/@@plone_context_state/is_editable"
           tal:condition="python:not text and is_editable"
           i18n:domain="plone"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>

        <div tal:condition="text">
          <div tal:content="structure text">The body</div>
        </div>

        <ul class="letter-filtering" tal:condition="view/enable_letter_filtering">
            <li>
                <a href="" tal:attributes="href context/absolute_url" i18n:translate="">All</a>
            </li>
            <tal:repeat tal:repeat="letter view/letters">
                <li>
                    <a href="" tal:attributes="href string: ${context/absolute_url}?letter=${letter}" tal:content="letter"></a>
                </li>
            </tal:repeat>
        </ul>

        <tal:repeat repeat="letter python: view.letters(filtered=True)" tal:define="use_rich_text view/use_rich_text">
          <div class="letter">
            <div class="header">
              <div class="title" tal:content="letter"></div>
            </div>
            <div class="terms">
              <tal:repeat repeat="item python:view.terms(letter)">
                <div class="term">
                  <img tal:define="image item/image"
                      tal:condition="nocall:image"
                      tal:replace="structure image/tag" />
                  <div class="description-wrapper">
                    <div class="description">
                      <span class="title"
                            tal:content="item/title">
                      </span>
                      -
                      <span class="description"
                           tal:condition="python: use_rich_text"
                           tal:content="structure item/text">Rich description</span>
                      <span class="description"
                           tal:condition="not: use_rich_text"
                           tal:content="item/description">Description</span>
                    </div>
                  </div>
                </div>
              </tal:repeat>
            </div>
          </div>
        </tal:repeat>
      </metal:content-core>
    </metal:content-core>
  </body>
</html>
