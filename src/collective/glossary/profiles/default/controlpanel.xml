<?xml version="1.0"?>
<object name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.glossary"
    purge="False">
  <configlet title="Glossary"
      action_id="glossary"
      appId="collective.glossary"
      category="Products"
      condition_expr=""
      url_expr="string:${portal_url}/@@glossary-settings"
      icon_expr="string:${portal_url}/++resource++collective.glossary/img/glossary-icon.png"
      visible="True"
      i18n:attributes="title">
    <permission>Manage portal</permission>
  </configlet>
</object>
